package part3.ex3.Getters와Setters;

public class Exam {
	private int kor;
	private int eng;
	private int math;
	
	public Exam() {
		kor = 0;
		eng = 0;
		math = 0;
	}
	public Exam(int kor1, int eng1, int math1) {
		kor = kor1;
		eng = eng1;
		math = math1;
	}
	
	
	public int getKor() {
		return kor;
	}
	public void setKor(int kor) {
		this.kor = kor;
	}
	public int getEng() {
		return eng;
	}
	public void setEng(int eng) {
		this.eng = eng;
	}
	public int getMath() {
		return math;
	}
	public void setMath(int math) {
		this.math = math;
	}
	public int total () {
		return kor+eng+math;
	}
	public float avg () {
		return (float)((total())/3.0); // 같은 클래스에서 메소드 서로 호출 가능.
	}
}
